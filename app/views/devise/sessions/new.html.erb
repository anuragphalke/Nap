<h2 class="text-center mt-5">Log in</h2>

<div data-controller="login">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-container">
      <div class="routine-form-group">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { class: "routine-form-control",
                                  autocomplete: "email",
                                  data: { button_active_target: "email"} } %>
      </div>
      <div class="routine-form-group">
        <%= f.input :password,
                    required: false,
                    input_html: { class: "routine-form-control",
                                  autocomplete: "current-password",
                                  data: { button_active_target: "password"} } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn-secondary", data: { button_active_target: "button"} %>
      </div>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
