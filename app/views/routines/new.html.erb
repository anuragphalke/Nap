<h1>New Routine</h1>

<%= simple_form_for [@user_appliance, @routine] do |f| %>

<div class="form-group">
    <%= f.input :name, label: "Name of the routine" %>
  </div>

  <div class="form-group">
    <%= f.input :starttime, label: "Start Time", as: :time %>
  </div>

  <div class="form-group">
    <%= f.input :endtime, label: "End Time", as: :time %>
  </div>

  <div class="form-group">
    <%= f.input :day,
                label: "Day",
                as: :select,
                collection: [["Monday", "1"], ["Tuesday", "2"], ["Wednesday", "3"], ["Thursday", "4"], ["Friday", "5"], ["Saturday", "6"], ["Sunday", "7"]],
                prompt: "Select a day" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Apply Routine", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back to my appliance", user_appliance_path(@user_appliance), class: "btn btn-primary" %>
