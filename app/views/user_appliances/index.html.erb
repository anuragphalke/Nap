<p style="font-size: 20px; padding-left: 9px">Categories</p>



<div style="margin-bottom: 40px;">
  <%= link_to "all", user_appliances_path, class: @selected_category == "all" ? "category-active" : "category" %>

  <% @categories.each do |category, subcategories| %>
    <%= link_to category.downcase, user_appliances_path(category: category), class: @selected_category == category ? "category-active" : "category" %>
  <% end %>
</div>

<div class="grid-2">
  <% @user_appliances.each do |appliance| %>
    <div class="card-appl">
      <%= link_to appliance.all_appliance.model, user_appliance_path(appliance) %>
    </div>
  <% end %>
</div>




<div class="grid-2">
    <%= link_to new_user_appliance_path, class: "btn-secondary" do %>
  <i class="fas fa-edit"></i> Edit
<% end %>


  <%= link_to "Add new device", new_user_appliance_path, class: "btn-active" %>
</div>
