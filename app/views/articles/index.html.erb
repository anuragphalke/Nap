<%# Overview of all articles %>
<div class="d-flex mt-3 mb-2">
  <input type="button" value="All" class= "border-0 shadow-none" style="background-color:#EBFF57; width:50%;">
  <input type="button" value="Favorites" class="btn border-0 shadow-none italic-button" style="width:50%;">
</div>
<div class="tree-icon ml-3 d-flex">
  <%= image_tag "tree.svg", alt: "Tree" %>
  <div class="mt-1 ms-2 flex-grow-1" style="font-size: 1em;"><p> Sustainable life<p></div>
    <%= image_tag "showmore.svg", alt: "Tree" %>
</div>
<div class="article-subtitle mb-2">
  <p> Let's explore efficiency.</p>
</div>

<div class="panel-container" id="article-left" >
  <% @generic_articles.each do |article| %>
    <div class="panel article-panel" style="background-image:
              linear-gradient(to bottom, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0) 50%),
              linear-gradient(to top, rgba(0, 0, 0, 1.2) 0%, rgba(0, 0, 0, 0) 50%),
              url('<%= asset_path("#{article.subcategory}.jpg") %>');>">
      <div class="star-icon-top">
        <%= image_tag "star.svg", alt: "Star" %>
      </div>
      <div class="article-title">
        <p><%= link_to article.title, article_path(article) %></p>
      </div>
    </div>
  <% end %>
</div>

<div class="tree-icon ml-3 d-flex">
  <%= image_tag "tree.svg", alt: "Tree" %>
  <div class="mt-1 ms-2 flex-grow-1"><p>Tips & Tricks</p></div>
  <%= image_tag "showmore.svg", alt: "Tree" %>
</div>
<div class="article-subtitle mb-2">
  <p> Let's read more with tips.</p>
</div>

