<%# Overview of all articles %>
<h1> Articles </h1>
<p> You can find many many articles about clean energy and saving and much more... here</p>

<h1> All Articles </h1>
<div class="panel-container" data-controller="button">
<% @generic_articles.each do |article| %>
  <div class="panel article-panel" data-action="click->button#scrollToCenter" style="background-image: url('<%= asset_path("#{article.subcategory}.jpg") %>')">
    <p><strong><%= link_to article.title, article_path(article) %></strong></p>
  </div>
<% end %>
</div>

<h1> My Articles </h1>
<div class="panel-container" data-controller="button">
<% @my_articles.each do |article| %>
  <div class="panel article-panel" data-action="click->button#scrollToCenter" style="background-image: url('<%= asset_path("#{article.subcategory}.jpg") %>')">
    <p><strong><%= link_to article.title, article_path(article) %></strong></p>
  </div>
<% end %>
</div>
