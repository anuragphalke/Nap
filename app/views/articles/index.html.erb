<%# Overview of all articles %>
<div class="mt-4 mb-3"><%= image_tag "button.svg", alt: "Favourites" %></div>
<div class="tree-icon ml-3 d-flex">
  <%= image_tag "tree.svg", alt: "Tree" %>
  <div class="mt-3 ms-2 flex-grow-1" style="font-size: 1.2em;"><p> Sustainable life<p></div>
    <%= image_tag "showmore.svg", alt: "Tree" %>
</div>
<div class="article-subtitle">
  <p> Let's explore the changing world.</p>
</div>

<div class="panel-container" data-controller="button">
  <% @generic_articles.each do |article| %>
    <div class="panel article-panel" data-action="click->button#scrollToCenter" style="background-image:
              linear-gradient(to bottom, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0) 50%),
              linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0) 50%),
              url('<%= asset_path("#{article.subcategory}.jpg") %>');>">
      <div class="star-icon-top">
        <%= image_tag "star.svg", alt: "Star" %>
      </div>
      <div class="article-title">
        <p><%= link_to article.title, article_path(article) %></p>
      </div>
    </div>
  <% end %>
</div>

<div class="tree-icon ml-3 d-flex">
  <%= image_tag "tree.svg", alt: "Tree" %>
  <div class="mt-3 ms-2 flex-grow-1" style="font-size: 1.2em;"><p>Tips & Tricks</p></div>
  <%= image_tag "showmore.svg", alt: "Tree" %>
</div>
<div class="article-subtitle">
  <p> Let's read more with tips.</p>
</div>
<div class="panel-container"  data-controller="button">
<% @my_articles.each do |article| %>
  <div class="panel article-panel" id="article-bottom" data-action="click->button#scrollToCenter" style="background-image:
            linear-gradient(to bottom, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0) 50%),
            linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0) 50%),
            url('<%= asset_path("#{article.subcategory}.jpg") %>');>">
    <div class="star-icon-top">
        <%= image_tag "star.svg", alt: "Star" %>
      </div>
    <div class="article-title">
    <p><%= link_to article.title, article_path(article) %></p>
    </div>
  </div>
<% end %>
</div>
